{
  "variables": {
    "release_ver": "{{ env `RELEASE_VER` }}",
    "email": "{{ env `EMAIL` }}",
    "login_user": "{{ env `DOCKER_USER` }}",
    "login_pass": "{{ env `DOCKER_PASS` }}"
  },
  "builders": [
    {
      "name": "docker-ubuntu",
      "type": "docker",
      "image": "ubuntu:xenial",
      "commit": true,
      "author": "{{ user `EMAIL` }}",
      "changes":[
        "LABEL version={{ user `release_ver` }}",
        "LABEL maintainer='{{ user `EMAIL` }}'",
        "LABEL description='Ubuntu image with DevOps tools.'",
        "USER ubuntu",
        "ENV USER ubuntu",
        "VOLUME /var/lib/docker",
        "VOLUME /home/ubuntu"
      ]
    },
    {
      "name": "testing",
      "type": "docker",
      "image": "ubuntu:xenial",
      "commit": true,
      "author": "{{ user `EMAIL` }}",
      "changes":[
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y python"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": [
        "-e",
        "ansible_python_interpreter=/usr/bin/python"
      ],
      "groups": [
        "ubuntu"
      ],
      "host_alias": "{{ build_name }}"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "ericovis/ubuntu",
        "tag": "{{ user `release_ver` }}",
        "only": ["docker-ubuntu"]
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{ user `login_user`}}",
        "login_password": "{{ user `login_pass`}}",
        "only": ["docker-ubuntu"]
      }
    ]
  ]
}
